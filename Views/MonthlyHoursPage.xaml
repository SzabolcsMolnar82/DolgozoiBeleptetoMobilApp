<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DolgozoiBeleptetoMobilApp.ViewModels"
             x:Class="DolgozoiBeleptetoMobilApp.Views.MonthlyHoursPage"
             Appearing="ContentPage_Appearing">

    <ContentPage.BindingContext>
        <vm:MonthlyHoursViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <Label Text="Havi ledolgozott idők" FontAttributes="Bold" FontSize="20" />
        <CollectionView ItemsSource="{Binding LedolgozottNapok}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>